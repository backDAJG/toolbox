{
  "name": "backend_toolbox",
  "version": "1.0.0",
  "description": "backend toolbox",
  "main": "index.js",
  "scripts": {
    "dev": "DEBUG=app:* && NODE_ENV=development && nodemon index",
    "start": "NODE_ENV=production && node index",
    "test": "mocha --exit",
    "cover": "nyc npm run test",
    "report": "nyc report --reporter=html && start coverage/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:backDAJG/toolbox.git/backend"
  },
  "author": "Alejandro Jerez",
  "license": "ISC",
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "joi": "^17.6.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "chalk": "^5.0.1",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.8",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "proxyquire": "^2.1.3",
    "sinon": "^13.0.2",
    "supertest": "^6.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "nyc": {
    "all": true,
    "includes": [
      "routes",
      "services",
      "lib",
      "utils"
    ]
